pipeline {
  agent {
        docker {
            image 'maven:latest'
        }
    }
  stages {
    stage('check version') {
      steps {
        sh '''
          mvn --version
          git --version
        '''
      }
    }
    stage('pass credentials') {
      steps {
        withCredentials([string(credentialsId: 'my_secret', variable: 'valeur')]) {
            sh '''
              echo "ceci est un test : ${valeur}
            '''
        }
      }
    }
  }
}